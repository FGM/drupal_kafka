<?php

use Drupal\Core\Link;

/**
 * Implements hook_requirements().
 */
function kafka_requirements($phase) {
  $ret = [
    'title' => 'Kafka',
    'value' => Link::createFromRoute(t('A-OK'), 'kafka.report'),
    // 'description' => t('I say OK'),
    'severity' => REQUIREMENT_OK,
  ];

  $ret = ['kafka' => $ret];
  return $ret;
}
